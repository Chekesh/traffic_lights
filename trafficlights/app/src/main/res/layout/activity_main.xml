<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#595959"
        android:text="Зеленый"
        android:textColor="#00FF04"
        android:onClick="onClikBtnAddPhone"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#595959"
        android:text="Синий"
        android:textColor="#276EFD"
        android:onClick="onClikBtnAddPhone_2"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#595959"
        android:text="Желтый"
        android:textColor="#FFE222"
        android:onClick="onClikBtnAddPhone_3"/>


</LinearLayout>